<h2> Sign up </h2>

<p> Sign up to this awesome app. </p>

<!-- , ADDED AFTER YOU LEFT -->

<!-- We use typeof here to avoid an error
      since the variable sometimes doesn't exist. -->
<% if (typeof messageForUsers === 'string'){ %>
  <p class='error-message'> <%= messageForUsers %> </p>
<% } %>
<!-- ^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^ -->


<form id='form' method='post' action='/signup'>
  <label for='/full-name-input'> Your Name </label>
  <input id='full-name-input' type='text' name='signupFullName' placeholder='Alan Turing'>
  <br>

  <label for='username-input'> Username </label>
  <input id='username-input' type='text' name='signupUsername' placeholder='Turingator'>
  <br>

  <label for='password-input'> Password </label>
  <input id='password-input' type='password' name='signupPassword' placeholder='********'>
  <br>



  <button> Sign Up </button>
</form>

<a href='/auth/facebook'> Log In with Facebook </a>
<br>
<a href='/auth/google'> Log In with Google </a>
