<h2 class="container text-center"> Sign up </h2>

<p class="container text-center"> Sign up to this awesome app. </p>

<% if (typeof messageForUsers === 'string'){ %>
  <p class='error-message'> <%= messageForUsers %> </p>
<% } %>


<form id='form' method='post' action='/signup'>
  <label for='/full-name-input'> Your Name </label>
  <input id='full-name-input' type='text' name='signupFullName' placeholder=''>
  <br>

  <label for='username-input'> Username </label>
  <input id='username-input' type='text' name='signupUsername' placeholder=''>
  <br>

  <label for='password-input'> Password </label>
  <input id='password-input' type='password' name='signupPassword' placeholder=''>
  <br><br>

  <button> Sign Up </button>
</form>

<div class="container text-center">
<a href='/auth/facebook'> Log In with Facebook </a>
<br><br>
<a href='/auth/google'> Log In with Google </a>
<br>
</div>
